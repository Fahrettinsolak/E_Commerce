@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Hakkımızda</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Açıklama</th>
                                <th>Adres</th>
                                <th>Mail Adresi</th>
                                <th>Telefon Numarası</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Description</td>
                                    <td>@item.Address</td>
                                    <td>@item.Mail</td>
                                    <td>@item.Phone</td>
                                    <td><a href="/Admin/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-success">Güncelle</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Count >= 1)
                    {
                        <a href="" class="btn btn-danger btn-sm disabled">1'den Fazla Hakkımızda Eklenemez!</a>
                        ;
                    }
                    else
                    {
                        <a href="/Admin/About/CreateAbout" class="btn btn-primary">Yeni Hakkımızda Girişi</a>

                    }
                </div>
            </div>
        </div>
    </div>
</section>



